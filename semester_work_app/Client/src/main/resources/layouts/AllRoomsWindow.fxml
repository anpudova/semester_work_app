<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox alignment="TOP_CENTER" spacing="40"
      style="-fx-background-color: linear-gradient(to bottom left, #1D2671, #9037c3);"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.gui.controllers.AllRoomsWindowController">
    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>
    <ImageView fitHeight="108" fitWidth="192" pickOnBounds="true" preserveRatio="true">
        <Image url="/images/logo.png"/>
    </ImageView>
    <ListView fx:id="listRooms"/>
    <HBox spacing="40">
        <Button text="Присоединиться" prefHeight="40" onAction="#clickJoinRoom"
                style="-fx-font-family: sans-serif; -fx-text-fill: #1D2671; -fx-font-size: 18"/>
        <Button text="Создать комнату" prefHeight="40" onAction="#clickCreateRoom"
                style="-fx-font-family: sans-serif; -fx-text-fill: #1D2671; -fx-font-size: 18"/>
    </HBox>
</VBox>
